<div class="container mt-3">
  <div class="row">
    <div class="col-12">
      <h1>All our Motorbikes</h1>
    </div>
  </div>
    <div class="col">
    <% if @query %>
      <p>You searched for <strong><%= @query %></strong>. We found <%= @motorbikes.count %> motorbikes out of our <%= Motorbike.count %> on our website</p>
    <% else %>
      <p>We have <%= Motorbike.count %> motorbikes on our website.</p>
    <% end %>
  </div>
  <div class="row">
  <%@motorbikes.each do |motorbike|  %>
    <div class="col-md-4">
      <div class="card" style="width: 18rem;">
        <%= image_tag motorbike.photo, class: "card-img-top" %>
        <div class="card-body">
          <h5 class="card-title"><%= motorbike.name %></h5>
          <p class="card-text"><%= motorbike.description %></p>
          <p class="card-text"><%= motorbike.price %>â‚¬</p>
          <%= link_to "Show", motorbike_path(motorbike), class: "btn btn-primary" %>
        </div>
      </div>
    </div>
    <% end %>
  </div>
  <div class="motorbike-card-actions">
  <%= link_to "New Motorbike", new_motorbike_path, class: "btn btn-primary" %>
  <%= link_to "Edit", edit_motorbike_path(@motorbikes), class: "btn btn-secondary" %>
  <%=  link_to "Remove", motorbike_path(@motorbikes), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "btn btn-danger" %>
</div>
