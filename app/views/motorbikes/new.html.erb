 <div class="container mt-4">
  <div class="row">
    <div class="col-6 m-auto">
      <div class="motorbike-form">
        <h1 class="text-center">New Motorbike</h1>
        <div class="mt-3">
              <%= simple_form_for @motorbike do |f| %>
                <%= f.input :name %>
                <%= f.input :description %>
                <%= f.input :year %>
                <%= f.input :price %>
                <%= f.input :photo, as: :file %>
                <%= f.submit "Create motorbike", class: "btn btn-primary mt-3" %>
              <% end %>
          <%= link_to 'Back', motorbikes_path, class: "btn btn-secondary mt-3" %>
         </div>
      </div>
    </div>
  </div>
</div>
