<div class="container">
  <div class="row">
    <div class="col-7">
      <div class="motorbike-show-card row">
        <%= cl_image_tag @motorbike.photo.key, class: "moto-photo-show col-6" %>
        <div class="col-6">
          <h1 class="name"><strong><%= @motorbike.name %></strong></h1>
          <p class="motorbike-show-description"><%=  @motorbike.description %></p>
          <div class="motorbike-show-price">
            <p><em><%= @motorbike.price %> â‚¬/day</em></p>

          </div>
        </div>
      </div>
      <h5 class='mt-4'>Book this motorbike !</h5>

        <%= simple_form_for [@motorbike, @booking] do |f| %>
          <%= f.input :date_range,
                      label: "Date Range",
                      as: :string,
                      input_html: { data: { controller: "datepicker" } } %>
          <%= f.submit class: "btn btn-primary" %>

        <% end %>
    </div>

    <div id="map" class="col-5" >
      <div style="width: 100%; height: 600px;"
        data-controller="map"
        data-map-markers-value="<%= @markers.to_json %>"
        data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
      </div>

      <div class="mt-2">
        <div class="listing-reviews">
          <%= render 'motorbikes/reviews' %>
        </div>
        <%= link_to "delete", motorbike_path(@motorbike), data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this Booking ?" }, class: "d-none" %>
        </div>
    </div>


    <%# <div class="motorbike-show-card">
      <div class="flex-align">
        <h6 class="no-mb">Share</h6>
        <div class="flex">
          <i class="fa-brands fa-facebook"></i>
          <i class="fa-brands fa-twitter"></i>
          <i class="fa-brands fa-instagram"></i>
        </div>
      </div>
    </div> %>


    </div>
  </div>
</div>
