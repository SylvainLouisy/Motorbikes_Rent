<div class="container margin-top-negative">
  <div class="row">
    <div class="col-8">
      <div class="motorbike-show-card">
        <%= cl_image_tag @motorbike.photo.key %>
        <h1><%= @motorbike.name %></h1>
        <p class="motorbike-show-description"><%=  @motorbike.description %></p>
        <div class="motorbike-show-price">
          <p><%= @motorbike.price %> €</p>
        </div>
      </div>

      <div class="col-4">
        <div class="motorbike-show-card">
          <h5>Book this motorbike !</h5>


          <form action="">
            <div class="input-group">
              <span class="input-group-text" id="start_date_booking">From:</span>
              <input type="text" class="form-control" aria-label="start_date_booking" aria-describedby="start_date_booking">
            </div>
            <div class="input-group mt-2">
              <span class="input-group-text" id="end_date_booking">To:</span>
              <input type="text" class="form-control" aria-label="end_date_booking" aria-describedby="end_date_booking">
            </div>
            <div class="input-group mt-2">
              <button class="btn btn-primary">Book</button>
              <%= link_to motorbike_path(@motorbike)%>
            </div>
          </form>
          <%= link_to "delete", motorbike_path(@motorbike), data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this Booking ?" } %>

        </div>

        <div class="motorbike-show-card">
          <h3>Details</h3>
          <div class="flex">
            <div class="flex">
              <p><%= @motorbike.price %> €</p>
            </div>
          </div>
          <div style="width: 100%; height: 600px;"
  data-controller="map"
  data-map-markers-value="<%= @markers.to_json %>"
  data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>"></div>
        </div>
        <div class="motorbike-show-card">
          <div class="flex-align">
            <h6 class="no-mb">Share</h6>
            <div class="flex">
              <i class="fa-brands fa-facebook"></i>
              <i class="fa-brands fa-twitter"></i>
              <i class="fa-brands fa-instagram"></i>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
