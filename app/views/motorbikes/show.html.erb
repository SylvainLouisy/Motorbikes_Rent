<div class="container">
  <div class="row">
    <div class="col-7">
      <div class="motorbike-show-card">
        <%= cl_image_tag @motorbike.photo.key, class: "moto-photo" %>
        <h1><%= @motorbike.name %></h1>
        <p class="motorbike-show-description"><%=  @motorbike.description %></p>
        <div class="motorbike-show-price">
          <p><%= @motorbike.price %> â‚¬/day</p>
        </div>
      </div>
    </div>

    <div class="col-5" >
      <div style="width: 100%; height: 600px;"
        data-controller="map"
        data-map-markers-value="<%= @markers.to_json %>"
        data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
      </div>

      <div class="">
        <h5>Book this motorbike !</h5>

        <%= simple_form_for [@motorbike, @booking] do |f| %>
          <%= f.input :date_range,
                      label: "Date Range",
                      as: :string,
                      input_html: { data: { controller: "datepicker" } } %>
          <%= f.submit %>
        <% end %>
        <%= link_to "delete", motorbike_path(@motorbike), data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this Booking ?" }, class: "d-none" %>
      </div>
    </div>


